{
  "AppSettings": {
    "Service.TestMode": true,
    "Service.ConfigFile": "PlotBot.json",
    "Service.Interval": 60000,
    "Service.PlottingInterval": "* * * * *",
    "Service.ReduceIdleMessages": true,
    "Service.RetryAfterFailed": true,
    "Service.PlotBot.CleanupCache": false,
    "Service.PlotBot.CleanupFailedCopy": true,
    "Service.PlotBot.DriveClearers.IdleTime": 60,
    "Service.PlotBot.ValidatePlotCommand": true
  },
  "LogSettings": {
    "MinLevel": "Information",
    "Directory": "/path/to/log/dir",
    "ArchiveSize": "50",
    "Mail": {
      "MinLevel": "Warning",
      "Sender": "some.sender@mail.com",
      "Receivers": "some.receiver@mail.com;some.other.receiver@mail.com",
      "Server": "127.0.0.1",
      "Port": 587,
      "Username": "SomeUsername",
      "Password": "SomePassword",
      "Ssl": true
    }
  }
}
